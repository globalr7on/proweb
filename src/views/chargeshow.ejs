<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title> Cargos Existentes</title>
  <% include partials/head %>
  <% include partials/menu %>
</head>
<hr>
<body class="signup">
  <hr>
  <hr>
  <div class="container">
    <div class="col-sm-8 mx-auto ">
      <div class="card mt-6">
        <div class="card-header">
          <h6 style="text-align: center;">Listado</h6>
        </div>
        <div class="card-body">
          <table class="table table-striped ">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Categoria</th>
              </tr>
            </thead>
            <tbody>
                <% for (var i = 0; i < Cargo_1.length; i++) { %>
                   <tr>
                      <td><%= i + 1 %></td>
                      <td> <%= Cargo_1[i].description%></td>
                      <td> <%= Cargo_1[i].category%></td>
                    </tr>
                <% } %>               
            </tbody>
          </table>
          <a href="/cargo" class="btn btn-primary btn-block">
            <span class="fa fa-user"></span> Registrar Cargo
          </a>
          <hr>
          <a href="/logout" class="btn btn-primary btn-block">
            Salir
          </a>
        </div>
      </div>
    </div>
  </div>
</body>
<% include partials/scripts %>

</html>